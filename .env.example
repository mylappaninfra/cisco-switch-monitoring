# Cisco Switch Connection Details
# Copy this file to .env and fill in your actual values
# WARNING: Never commit .env file with actual credentials to GitHub!

# Switch connection details
SWITCH_HOST=192.168.1.1
SWITCH_USER=admin
SWITCH_PASS=your_password_here
SWITCH_SECRET=your_enable_secret_here

# Optional: Multiple switches (comma-separated)
# SWITCH_HOSTS=192.168.1.1,192.168.1.2,192.168.1.3

# Output configuration
OUTPUT_DIR=/var/log/cisco_health/
LOG_LEVEL=INFO

# Alert configuration
ALERT_EMAIL=netops@example.com
SYSLOG_SERVER=syslog.example.com
SYSLOG_PORT=514

# Database configuration (optional)
INFLUXDB_HOST=localhost
INFLUXDB_PORT=8086
INFLUXDB_DATABASE=network_monitoring
INFLUXDB_USER=
INFLUXDB_PASSWORD=

# Monitoring intervals (in seconds)
MONITORING_INTERVAL=300

# Thresholds
CPU_WARNING_THRESHOLD=80
CPU_CRITICAL_THRESHOLD=95
MEMORY_WARNING_THRESHOLD=85
MEMORY_CRITICAL_THRESHOLD=95
TEMP_WARNING_THRESHOLD=65
TEMP_CRITICAL_THRESHOLD=75
